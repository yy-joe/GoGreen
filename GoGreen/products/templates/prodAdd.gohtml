<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Product</title>

    {{ template "userHeader" }}
    {{ template "style" }}
</head>
<body>

{{ template "adminNav" }}

    <div class="body">
        <h2>Product Details</h2>
        <br>
        <form method="post">
            <label for="name">Product Name:</label>    
            <input type="text" name="Name" id="name" required><br/>
            <label for="descShort">Short Description:</label>
            <input type="text" name="DescShort" id="descShort" required><br/>
            <label for="descLong">Long Description:</label>
            <textarea name="DescLong" id="descLong" rows="4" cols="50" placeholder="(optional)"></textarea><br/>
            <label for="price">Price:</label>
            <input type="text" name="Price" id="price" required><br/>
            <label for="Quantity">Quantity:</label>
            <input type="text" name="Quantity" id="quantity" required><br/>
            
            <p>Condition:
            <label for="new">New</label>
            <input type="radio" name="Condition" id="new" value="New" required>
            <label for="used">Used</label>
            <input type="radio" name="Condition" id="used" value="Used" required>
    
            <br>
    
            <label for="categories">Categories:</label>
            <select name="CategoryID" id="categories" required>
    
            <option value="" disabled selected hidden>Please Choose...</option>
            
            {{range $index, $element := .Categories}} 
                <option value="{{$element.ID}}"> {{$element.Name}} </option>
            {{end}}
            </select>
    
            <br>
    
            <label for="brands">Brand:</label>
            <select name="BrandID" id="brands" required>
    
            <option value="" disabled selected hidden>Please Choose...</option>
    
            {{range $index, $element := .Brands}} 
                <option value="{{$element.ID}}"> {{$element.Name}} </option>
            {{end}}
            </select>
    
            <br>
    
            <label for="status">Status:</label>
            <select name="Status" id="status" required>
                <option value="" disabled selected hidden>Please Choose...</option>
                <option value="active"> Active </option>
                <option value="unlisted"> Delisted </option>
            </select>
            
            <br>
            
            <input type="submit" class="btn btn-secondary btn-sm" value="Add">
        </form>
    </div>

{{ template "scripts" }}

</body>
</html>