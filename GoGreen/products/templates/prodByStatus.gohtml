<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Product Management Page</title>
</head>
<body>

<h1> {{.Status}} Products </h1>

<table>
<tr>
    <td><h3><a href="/products/{{.ByStatus}}?sortby=Name">Product Name</a></h3></td>
    <td><h3>Short Description</h3></td>
    <td><h3>Long Description</h3></td>
    <td><h3><a href="/products/{{.ByStatus}}?sortby=DateCreated">Date Added</a></h3></td>
    <td><h3><a href="/products/{{.ByStatus}}?sortby=DateModified">Date Modified</a></h3></td>
    <td><h3><a href="/products/{{.ByStatus}}?sortby=Price">Price</a></h3></td>
    <td><h3><a href="/products/{{.ByStatus}}?sortby=Quantity">Stock</a></h3></td>
    <td><h3>Condition</h3></td>
    <td><h3>Category_ID</h3></td>
    <td><h3>Brand_ID</h3></td>
    <td><h3>Status</h3></td>

</tr>
{{range .Products}} 
<tr>
    <td><a href="/product/{{.ID}}?byStatus={{$.ByStatus}}">{{.Name}}</a></td>
    <td>{{.DescShort}}</td>
    <td>{{.DescLong}}</td>
    <td>{{.DateCreated}}</td>
    <td>{{.DateModified}}</td>
    <td>{{.Price}}</td>
    <td>{{.Quantity}}</td>
    <td>{{.Condition}}</td>
    <td>{{.CategoryID}}</td>
    <td>{{.BrandID}}</td>
    <td>{{.Status}}</td>

</tr>
{{end}}
</table>

</body>
</html>