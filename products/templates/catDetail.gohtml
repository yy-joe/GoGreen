<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Category Details</title>
    {{ template "userHeader" }}
    {{ template "style" }}
</head>
<body>

{{ template "adminNav" }}

<div class="body">
    <h2>Category Details</h2>
    <br>
    <form method="post" action="/category/update/{{.ID}}">
        <label for="name">Category Name:</label>    
        <input type="text" name="Name" id="name" value="{{.Name}}" required><br/>
        <label for="description">Description:</label>
        <input type="text" name="Description" id="description" value="{{.Description}}" required><br/>
    
        <br>
        
        <input type="submit" class="btn btn-secondary btn-sm" value="Update">
    </form>
    <br>
    <form method="post" action="/category/delete/{{.ID}}">
        <input type="submit" class="btn btn-secondary btn-sm" value="Delete">
    </form>
    <br>
    <form method="post" action="/categories/all">
        <input type="submit" class="btn btn-secondary btn-sm" value="Back To Categories">
    </form>
</div>

{{ template "scripts" }}

</body>
</html>