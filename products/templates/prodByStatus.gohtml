<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Product Management Page</title>

    {{ template "userHeader" }}
    {{ template "style" }}
</head>
<body>

{{ template "adminNav" }}

    <div class="body">
        <h1> {{.Status}} Products </h1>
        <br>
        <table class="table">
        <tr>
            <td><h3><a href="/products/{{.ByStatus}}?sortby=Name">Product Name</a></h3></td>
            <td><h3>Short Description</h3></td>
            <td><h3>Long Description</h3></td>
            <td><h3><a href="/products/{{.ByStatus}}?sortby=DateCreated">Date Added</a></h3></td>
            <td><h3><a href="/products/{{.ByStatus}}?sortby=DateModified">Date Modified</a></h3></td>
            <td><h3><a href="/products/{{.ByStatus}}?sortby=Price">Price</a></h3></td>
            <td><h3><a href="/products/{{.ByStatus}}?sortby=Quantity">Stock</a></h3></td>
            <td><h3>Condition</h3></td>
            <td><h3>Category_ID</h3></td>
            <td><h3>Brand_ID</h3></td>
           
            <td>     
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <h3>Status</h3> 
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/products/all">All</a>
                        <a class="dropdown-item" href="/products/active">Active</a>
                        <a class="dropdown-item" href="/products/unlisted">Unlisted</a>
                        <a class="dropdown-item" href="/products/soldout">Sold Out</a>
                    </div>
                </div>
            </td>
    
        </tr>
        {{range .Products}} 
        <tr>
            <td><a href="/product/{{.ID}}?byStatus={{$.ByStatus}}">{{.Name}}</a></td>
            <td>{{.DescShort}}</td>
            <td>{{.DescLong}}</td>
            <td>{{.DateCreated}}</td>
            <td>{{.DateModified}}</td>
            <td>{{.Price}}</td>
            <td>{{.Quantity}}</td>
            <td>{{.Condition}}</td>
            <td>{{.CategoryID}}</td>
            <td>{{.BrandID}}</td>
            <td>{{.Status}}</td>
    
        </tr>
        {{end}}
        </table>
    </div>

{{ template "scripts" }}

</body>
</html>